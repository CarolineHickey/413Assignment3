@{
    ViewBag.Title = "Joel's Recently Added Movies List:";
}

@model IEnumerable<JoelMovies.Models.ApplicationResponse>

<div>
    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>LentTo</th><th>Notes</th></tr>
        </thead>
        <tbody><!-- This is a for loop that iterates through the IEnumerable. It also contains an if statement not allowing the display of the Movie "Indepence Day"-->
            @foreach (JoelMovies.Models.ApplicationResponse x in Model)
            {
                @if (x.Title != "Independence Day")
                {
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
            </tr>
                    }
                }
        </tbody>
    </table>
</div>