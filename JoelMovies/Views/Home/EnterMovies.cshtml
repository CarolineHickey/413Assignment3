@{
    ViewBag.Title = "Enter New Movie";
}

@model JoelMovies.Models.ApplicationResponse
 
<form asp-action="EnterMovies" method="post">
    <div>
        <label asp-for="Category">Category:</label>

        <input id="Category" asp-for="Category" />
        <!--<span asp-validation-for="Category" class="text-danger"></span>-->

    </div>

    <div>
        <label asp-for="Title">Title:</label>

        <input id="Title" asp-for="Title" />
        <!--<span asp-validation-for="Title" class="text-danger"></span>-->

    </div>

    <div>
        <label asp-for="Year">Year:</label>

        <input id="Year" asp-for="Year" />
        <!--<span asp-validation-for="Year" class="text-danger"></span>-->

    </div>

    <div>
        <label asp-for="Director">Director:</label>

        <input id="Director" asp-for="Director" />
        <!--<span asp-validation-for="Director" class="text-danger"></span>-->

    </div>

    <div>
        <label asp-for="Rating">Rating:</label>

        <select id="Rating" asp-for="Rating">

            <option value="G"> G </option>
            <option value="PG"> PG</option>
            <option value="PG-13"> PG-13</option>
            <option value="R"> R</option>

        </select>
        <!--<span asp-validation-for="Rating" class="text-danger"></span>-->
    </div>


    <div>
        <label asp-for="Edited">Edited:</label>

        <select id="Edited" asp-for="Edited">
            <option value="true"> True</option>
            <option value="false"> False</option>
        </select>

    </div>


    <div>
        <label asp-for="LentTo">LentTo:</label>

        <input id="LentTo" asp-for="LentTo" />

    </div>

    <div>
        <label asp-for="Notes">Notes:</label>

        <input id="Notes" asp-for="Notes" />
        <!--<span asp-validation-for="Notes" class="text-danger"></span>-->

    </div>
    <input type="submit" value="Submit" id="submitbutton" />
    <!--<button id="submit" type="submit">Submit Movie</button>-->
    <div asp-validation-summary="All"></div>
</form>
